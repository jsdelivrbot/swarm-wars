{
    "compilerOptions": {
        "outFile": "./public/app.js",
        "module": "system",
        "moduleResolution": "node",
        "target": "es2017",
        
        "sourceMap": true,
        "watch": true,

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "./src/**/*"
    ]
}
